/* 污染信息 */

.info {
  position: absolute;
  top: 75%;
  width: 100%;
  padding: 75rpx 0;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
}

.info .weather {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info .weather .weather-top {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.info .weather .weather-top .icon {
  margin-right: 15rpx;
}

.weather .big-text {
  font-size: 200rpx;
  line-height: 1em;
}

.weather .sm-text {
  font-size: 100rpx;
  line-height: 1em;
  width: 2em;
}

.date {
  font-size: 0.6em;
}

/* 更多信息 */

.more {
  margin-top: 100vh;
  padding-bottom: 100rpx;
}

