/* 污染信息 */

.info {
  position: absolute;
  top: 75%;
  width: 100%;
  padding: 75rpx 0;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
}

.info .weather {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info .weather .weather-top {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.info .weather .weather-top .icon {
  margin-right: 15rpx;
}

.weather .big-text {
  font-size: 200rpx;
  line-height: 1em;
}

.date {
  font-size: 0.6em;
}

/* 更多信息 */

.more {
  margin-top: 100vh;
  padding-bottom:100rpx;
}

/* 更多信息-六因子浓度 */

.more .lyznd {
  border-radius: 20rpx;
  width: 700rpx;
  background: rgba(120, 120, 120, 0.5); 
  margin: 0 auto;
  padding: 15rpx;
  margin-top: 30rpx;
}

.lyznd-header {
  font-size: 40rpx;
  line-height: 1.6em;
  border-bottom: 1rpx solid #999;
}

.lyznd-list {
}

.lyznd-item {
  padding-top: 20rpx;
  line-height: 1.6em;
  display: inline-block;
  width: 330rpx;
  border-bottom: 1rpx solid #999;
}

.lyznd-item:nth-child(2n-1) {
  margin-right: 40rpx;
}
