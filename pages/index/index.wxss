.bj {
  z-index: -1;
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 100vh;
}

/* 顶部 */

.top {
  /* position: fixed; */
  top: 0;
  position: absolute;
  width: 100%;
  padding-top: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  line-height: 40rpx;
}

/* 顶部-定位 */

.top .dw {
  /* flex: 3; */
