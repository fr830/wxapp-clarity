/**index.wxss**/

.jcd-more {
    float: right;
    text-align: right;
}

/* 顶部 */

.top {
    /* position: fixed; */
    top: 0;
    position: absolute;
    width: 100%;
    padding-top: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 45rpx;
    line-height: 40rpx;
}

/* 顶部-定位 */

.top .dw {
    /* flex: 3; */
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0 10rpx;
    /* position: relative; */
}

.top .dw .dw-icon {
    padding-left: 10rpx;
    padding-top: 10rpx;
    /* position: absolute; *//* left: -60rpx; */
}

.top .dw .dw-text {
    margin-left: 40rpx;
    text-align: center;
    color: white;
}

/* 顶部-切换水质 */

.top .sz {
    position: absolute;
    left: 30rpx;
}

.top .sz image {
    width: 1.5em;
    height: 1.5em;
    /* padding: 0 20rpx; */
}

/* 首页污染信息 */

.info {
    position: absolute;
    top: 35.5%;
    width: 100%;
    padding: 75rpx 0;
}

.info .aqi {
    position: absolute;
    width: 100%;
    text-align: center;
    color: #fff;
}

.aqi .big-text {
    font-size: 220rpx;
    line-height: 1em;
}

.aqi .sm-text {
    position: absolute;
    top: 155rpx;
    left: 160rpx;
    font-size: 25rpx;
    font-weight: 200;
    line-height: 1em;
    width: 2em;
}

.info .quality {
    color: #c4c7d1;
    position: absolute;
    width: 100%;
    top: 330rpx;
    text-align: center;
    font-size: 40rpx;
    line-height: 1em;
}

/* 未来空气质量 */

.future {
    color: #000;
    position: absolute;
    bottom: 50rpx;
    width: 100%;
    height: 400rpx;
    /* background: #eee; */
    opacity: 0.8;
}

.future view {
    position: relative;
    top: 100rpx;
    font-size: 25rpx;
    font-weight: 200;
    color: #fff;
}

ff-canvas {
    height: 400rpx;
}

.date {
    font-size: 0.6em;
}

/* 更多信息 */

.more {
    margin-top: 100vh;
    padding-bottom: 100rpx;
}

/* 更多信息-六因子浓度 */

.lyznd .list {
    padding: 60rpx 0;
    overflow: hidden;
    position: relative;
}

.lyznd .item {
    width: 250rpx;
    padding: 30rpx 0;
    font-size: 30rpx;
    line-height: 1.4em;
    display: inline-block;
    text-align: center;
    font-weight: 200;
}

.lyznd .line {
    position: absolute;
    background: #fff;
    width: 2rpx;
    height: 200rpx;
    top: 110rpx;
}

.y1 {
    left: 250rpx;
}

.y2 {
    left: 500rpx;
}

.lyznd .list .x1 {
    top: 210rpx;
    left: 25rpx;
    width: 700rpx;
    height: 2rpx;
}

/* 监测点 */
.map {
    margin: 0 auto;
    border: 30rpx #666666 solid;
    background: #666666;
    border-radius: 30rpx;
    opacity: 0.5;
}
#map,.map {
    width: 650rpx;
    height: 450rpx;
}

/* 监测点 */

.jcd {
    width: 640rpx;
    margin: 0 auto;
    font-weight: 200;
}

.jcd .h3 {
    padding-left: 0; 
}

.tb {
    font-size: 30rpx;
    padding: 20rpx 0;
    width: 160rpx;
    display: inline-block;
    border-bottom: #666 1rpx solid; 
}

.tb:nth-child(2),.tb:nth-child(3){
    text-align: center
}

.tb:nth-child(4){
    text-align: right
}
